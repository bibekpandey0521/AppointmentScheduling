@model AppointmentScheduling.Models.ViewModels.RegisterViewModel;

<h2>Sign Up</h2>
<form method="post" asp-action="Register" asp-controller="Account">
    <h4>Create a new Account</h4>
    <hr />
    @* <div asp-validation-summary="All" class="text-danger"></div> *@
    <div class="from-group row mb-3">
        <label class="col-md-2" asp-for="Name"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-md-2" asp-for="Email"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="from-group row mb-3">
        <label class="col-md-2" asp-for="Password"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-md-2" asp-for="ConfirmPassword"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-md-2" asp-for="RoleName"></label>
        <div class="col-md-10">
            <select asp-for="RoleName" asp-items="@AppointmentScheduling.Utility.Helper.GetRolesDropDown()" class="form-control"></select>
        </div>
    </div>
    <div class="form-group mb-3">
        <div class="col-md-10 offset-md-2">
            <input type="submit" value="Register" class="btn btn-success mb-2 py-2 px-4" />
        </div>
      
        <div class="col-md-10 offset-md-2">
            <a asp-action="Login">Sign In</a>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
